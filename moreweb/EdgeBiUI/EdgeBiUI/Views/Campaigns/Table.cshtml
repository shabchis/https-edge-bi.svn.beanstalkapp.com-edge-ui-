@model List<EdgeBiUI.Models.CampaignRowModel>
@using Easynet.Edge.UI.Data;

<div class="IndexTable">
    <div class="IndexTableHeader">
        <div class="" style="float:left; width:70%; height:14px; overflow:hidden;"><div style="padding-left:30px;">Name</div></div>
        <div class="" style="float:left; width:15%; height:14px; overflow:hidden;">Channel</div>
        <div class="" style="float:left; width:15%; height:14px; overflow:hidden;">Status</div>
    </div>

    @foreach (EdgeBiUI.Models.CampaignRowModel campaign in Model)
    {
        <div class="IndexTableRow">
            <div class="IndexTableName" style="width:70%;">
                <div class="campaignButtonClose" onclick="openAdGroups(@campaign.CampaignGK); changeIcon(this);"></div>
                <div style="float:left; margin-left:5px;" onclick="openCampaignDetails(@campaign.CampaignGK)" title="@campaign.CampaignGK">@campaign.CampaignName</div>
            </div>
            <div class="IndexTableDesc" style="width:15%;">@campaign.ChannelName</div>
            <div class="IndexTableDesc" style="width:15%;">@campaign.Status</div>
        </div>
        <div class="IndexTableContainer" id="@("Adgroups" + campaign.CampaignGK)" style="display:none;">
            
        </div>
    }
</div>